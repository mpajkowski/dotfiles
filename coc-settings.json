{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": ".ccls-cache"
         }
       }
    },
    "R": {
      "command": "R",
      "filetypes": ["r"],
      "rootPatterns": [],
      "initializationOptions": {
       }
    },
  },
  "python.jediEnabled": false
}
